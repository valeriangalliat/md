# We don't want to merge any parent configuration
extend: false

lang: en
layout: layout.mustache

extensions:
    # ID on headers
    - headerid

    # Highlight code blocks
    - codehilite

    # Table of contents
    - toc

extension_configs:
    headerid:
        # Markdown headers will begin at level 2
        level: 2

    codehilite:
        # Always display lines
        linenums: true

    toc:
        # Headers links to themselves
        # anchorlink: true

        # Add a permalink after headers (on hover with current layout)
        permalink: true

        # Title of the table of contents
        # title: Custom title
